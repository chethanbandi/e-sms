<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.important {
			font-weight: bold;
		}
	</ui:style>
	
	<g:DockLayoutPanel unit='EM'>
		<g:north size='4'>
			<g:HorizontalPanel horizontalAlignment="ALIGN_LEFT">
				<g:HorizontalPanel>
					<g:Label ui:field="head" text="e Student Management System" />
				</g:HorizontalPanel>
				<g:HorizontalPanel ui:field="sessionControls" horizontalAlignment="ALIGN_RIGHT">
					<g:Hyperlink text="Logout" />
					<g:Hyperlink text="Switch Role" />
				</g:HorizontalPanel>
			</g:HorizontalPanel>
		</g:north>
		
		<g:west size='16'>
			<g:ScrollPanel ui:field="menu" />
		</g:west>
		
		<g:center>
			<g:ScrollPanel ui:field="content" />
		</g:center>
		
		<g:south size='4'>
			<g:Label ui:field="footer" text="footer" />
		</g:south>

	</g:DockLayoutPanel>
</ui:UiBinder> 