<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:FormPanel ui:field="form">
		<g:HTMLPanel>
			<table>
				<tr>
					<td><g:Label text="Name" /></td>
					<td><g:TextBox ui:field="name" name="name" /></td>
				</tr>
				
				<tr>
					<td><g:Label text="Short Name" /></td>
					<td><g:TextBox ui:field="shortName" name="shortName" /></td>
				</tr>
				
				<tr>
					<td><g:Label text="Address1" /></td>
					<td><g:TextBox ui:field="address1" name="address1" /></td>
				</tr>
				
				<tr>
					<td><g:Label text="Address2" /></td>
					<td><g:TextBox ui:field="address2" name="address2" /></td>
				</tr>
				
				<tr>
					<td><g:Label text="City" /></td>
					<td><g:TextBox ui:field="city" name="city" /></td>
				</tr>
				
				<tr>
					<td><g:Label text="State" /></td>
					<td><g:TextBox ui:field="state" name="state" /></td>
				</tr>
				
				<tr>
					<td><g:Label text="Country" /></td>
					<td><g:TextBox ui:field="country" name="country" /></td>
				</tr>
				
				<tr>
					<td><g:Label text="EMail" /></td>
					<td><g:TextBox ui:field="email" name="email" /></td>
				</tr>
				
				<tr>
					<td><g:Label text="Phone1" /></td>
					<td><g:TextBox ui:field="phone1" name="phone1" /></td>
				</tr>
				
				<tr>
					<td><g:Label text="Phone2" /></td>
					<td><g:TextBox ui:field="phone2" name="phone2" /></td>
				</tr>
				
				<tr>
					<td />
					<td align="right"><g:SubmitButton styleName="{style.important}" ui:field="button" text="Save" /></td>
				</tr>
			</table>
		</g:HTMLPanel>
	</g:FormPanel>
</ui:UiBinder> 