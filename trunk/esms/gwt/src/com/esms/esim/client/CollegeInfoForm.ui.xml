<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:FormPanel ui:field="form">
		<g:HTMLPanel>
			<g:Label text="Name" />
			<g:TextBox ui:field="name" name="name" />
			
			<g:Label text="Short Name" />
			<g:TextBox ui:field="shortName" name="shortName" />
			
			<g:Label text="Address1" />
			<g:TextBox ui:field="address1" name="address1" />
			
			<g:Label text="Address2" />
			<g:TextBox ui:field="address2" name="address2" />
			
			<g:Label text="City" />
			<g:TextBox ui:field="city" name="city" />
			
			<g:Label text="State" />
			<g:TextBox ui:field="state" name="state" />
			
			<g:Label text="Country" />
			<g:TextBox ui:field="country" name="country" />
			
			<g:Label text="EMail" />
			<g:TextBox ui:field="email" name="email" />
			
			<g:Label text="Phone1" />
			<g:TextBox ui:field="phone1" name="phone1" />
			
			<g:Label text="Phone2" />
			<g:TextBox ui:field="phone2" name="phone2" />
			
			<g:SubmitButton styleName="{style.important}" ui:field="button" text="Submit" />
		</g:HTMLPanel>
	</g:FormPanel>
</ui:UiBinder> 